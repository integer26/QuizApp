                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="17dp"
                android:onClick="checkMetallica"
                android:text="Verifica!" />
        </RelativeLayout>

        <ImageView
